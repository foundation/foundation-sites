<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Layout filename: '{{layout}}'</title>
    <link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{assets}}/validation.css">
  </head>
  <body style="padding-top: 60px;">
    <div class="container">

      <!-- validate assets path -->
      <section id="validate"></section>
      <div class="docs-section">
        <div class="docs-header" id="content">
          <h4><strong class="text-muted">{{page.src}}</strong> &#x2192; <strong class="text-success">{{page.dest}}</strong></h4>
        </div>
        <hr>
      </div>

      {{pager pagination}}
      <hr>

      <div class="row">
        <!-- Column: sidebar -->
        <div class="col-md-3">
          <div class="bs-sidebar hidden-print" role="complementary">
            <!-- pagination -->
            {{nav pagination}}
          </div>
        </div>
        <!-- Column: content -->
        <div class="col-md-9" role="main">
          <div class="docs-section">
            <div class="docs-header" id="content">
              <h4><strong>Page layout:</strong> {{default originalLayout '(no layout defined)'}}</h4>
              <h4><strong>Page src:</strong> {{page.src}}</h4>
              <h4><strong>Page dest:</strong> {{page.dest}}</h4>
              <h4><strong>Dest filename:</strong> {{page.filename}}</h4>
              <h4><strong>Dest basename:</strong> {{page.basename}}</h4>
              <h4><strong>Page title:</strong> {{default title '(no title defined)'}}</h4>
            </div>

            <hr>
            <div class="row">
              <div class="col-md-6">
                <!-- Categories Collection -->
                {{#if categories}}
                  {{> collections-categories }}
                {{/if}}
              </div>
              <div class="col-md-6">
                {{#if tags}}
                  {{> collections-tags }}
                {{/if}}
              </div>
            </div>

            <hr>

            {{> body }}

            <div class="docs-header" id="content">
              <h1>Content</h1>
            </div>
            <ul>
            {{#each pages}}
              <li><a href="{{relative ../page.dest dest}}">{{filename}}</a></li>
            {{/each}}
            </ul>

            <hr>
            <div style="display: none">

              <h1>Page</h1>
              <h1>Each pages</h1>
              <ul>
                {{#each pages}}<li><a href="{{relativeLink}}" class="{{#isCurrentPage}}active{{/isCurrentPage}}">{{basename}}</a></li>
                  <!--
                  "this"
                  ===============================
                  this.src:           {{this.src}}
                  this.dest:          {{this.dest}}
                  this.dirname:       {{this.dirname}}
                  this.filename:      {{this.filename}}
                  this.pagename:      {{this.pagename}}
                  this.basename:      {{this.basename}}
                  this.ext:           {{this.ext}}
                  this.isCurrentPage:      {{this.isCurrentPage}}
                  this.relativeLink:  {{this.relativeLink}}

                  "page"
                  ===============================
                  page.src:           {{../page.src}}
                  page.dest:          {{../page.dest}}
                  page.dirname:       {{../page.dirname}}
                  page.filename:      {{../page.filename}}
                  page.pagename:      {{../page.pagename}}
                  page.basename:      {{../page.basename}}
                  page.ext:           {{../page.ext}}
                  page.isCurrentPage:      {{../page.isCurrentPage}}
                  page.relativeLink:  {{../page.relativeLink}}

                  "root"
                  ===============================
                  src:                {{src}}
                  dest:               {{dest}}
                  dirname:            {{dirname}}
                  filename:           {{filename}}
                  pagename:           {{pagename}}
                  basename:           {{basename}}
                  ext:                {{ext}}
                  isCurrentPage:           {{isCurrentPage}}
                  relativeLink:       {{relativeLink}}
                  -->
                {{/each}}
              </ul>

              <h1>Debug Info</h1>
              {{{inspect page 'json'}}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="{{assets}}/validation.js"></script>
  </body>
</html>
